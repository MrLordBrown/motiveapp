<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="com.cordova.motiveinthenight" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-US">
  <name>MotiveInTheNight</name>
  <description>The official app for listening to Ataxic Respiration's debut album Motive in the Night</description>
  <author href="https://motiveinthenight.web.app" email="ataxicrespiration@gmail.com">kryz_braun_technologies</author>
  <content src="index.html" />
  <access origin="*" />
  <vs:features />
  <preference name="SplashScreen" value="screen" />
  <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="android">
    <icon src="36.png" density="ldpi" />
    <icon src="48.png" density="mdpi" />
    <icon src="72.png" density="hdpi" />
    <icon src="96.png" density="xhdpi" />
  </platform>
  <platform name="android">
    <splash src="lhdpi.png" density="land-hdpi" />
    <splash src="lldpi.png" density="land-ldpi" />
    <splash src="lmdpi.png" density="land-mdpi" />
    <splash src="lxhdpi.png" density="land-xhdpi" />
    <splash src="hdpi.png" density="port-hdpi" />
    <splash src="ldpi.png" density="port-ldpi" />
    <splash src="mdpi.png" density="port-mdpi" />
    <splash src="xhdpi.png" density="port-xhdpi" />
  </platform>
 </widget>
